<div class="navbar container-phone">
        <h1 class="title">🕺🏼 Mon profil</h1>
</div>
<div class="container-phone text-center">
  <div class="profil-infos">
    <div class="profil-photo d-flex position-relative">
      <%= image_tag "profil/profil_kylan.jpeg", class: "rounded-circle", width: '100px', height: '100px' %>
      <%= link_to image_tag("buttons/edit_button.svg", alt: "Modifier mon profil", class: "edit-button edit-button-overlay"), edit_profils_path(@user) %>
    </div>
    <div class="profil-description">
      <h3><%= @user.user_name %></h3>
      <p><%= @user.first_name%> <%= @user.last_name %></p>
    </div>
  </div>
</div>

  <div class="d-flex justify-content-center gap-3 mb-4">
    <p class="button"><%= link_to "Fermer ma session",  destroy_user_session_path, data: {turbo_method: :delete} %></p>
  </div>
  <h2 class="">Tableau de bord</h2>
</div>
<div class="transactions-container w-75 mx-auto text-center">
  <div class="row">
    <div class="text-center">
      <%= link_to "Mes habits likés", profils_likes_path %>
      <br>
      <%= link_to "toutes mes transactions", owner_transactions_path %>
    </div>
    <%= render "transactions", transactions: @transactions, clothes: @clothes %>
  </div>
</div>
