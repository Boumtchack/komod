  </div>
  <h2 class="">Tableau de bord</h2>
</div>
<div class="transactions-container w-75 mx-auto text-center">
  <div class="row">
    <div class="text-center">
      <%= link_to "Mes habits likés", profils_likes_path %>
      <br>
      <%= link_to "toutes mes transactions", owner_transactions_path %>
    </div>
    <%= render "transactions", transactions: @transactions, clothes: @clothes %>
  </div>
</div>
