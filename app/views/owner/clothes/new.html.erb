<div class="font-creation">
  <div class="container w-50">
    <h1 class="text-center m-4">Ajoute une annonce à ta Kommod</h1>
    <%= simple_form_for([:owner, @clothe], html: { class: "form-overlay" }) do |f| %>
      <%= f.input :name, label: "Nom" %>
      <%= f.input :description, label: "Description" %>
      <%= f.input :category, label: "category" %>
      <%= f.input :brand, label: "marque" %>
      <%= f.input :size, label: "Taille" %>
      <%= f.input :value, label: "Prix" %>
      <%= f.input :condition, label: "état" %>
      <%= f.input :photos, as: :file, input_html: { multiple: true } %>
      <%= f.submit "creer une annonce", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
